=provides

__PERL_CORE_MAJOR__
__PERL_CORE_MINOR__
__PERL_CORE_RELEASE__
PERL_BCDVERSION

__PERL_CORE_MINOR___DECIMAL
PERL_DECIMAL_VERSION
__PERL_CORE_MINOR___GE
__PERL_CORE_MINOR___LT

=dontwarn

PERL_PATCHLEVEL_H_IMPLICIT

=implementation

#ifndef __PERL_CORE_MAJOR__
#  if !defined(__PATCHLEVEL_H_INCLUDED__) && !(defined(PATCHLEVEL) && defined(SUBVERSION))
#    define PERL_PATCHLEVEL_H_IMPLICIT
#    include <patchlevel.h>
#  endif
#  if !(defined(__PERL_CORE_MINOR__) || (defined(SUBVERSION) && defined(PATCHLEVEL)))
#    include <could_not_find_Perl_patchlevel.h>
#  endif
#  ifndef __PERL_CORE_MAJOR__
#    define __PERL_CORE_MAJOR__       (7)
     /* Replace: 1 */
#    define __PERL_CORE_MINOR__        PATCHLEVEL
#    define __PERL_CORE_RELEASE__     SUBVERSION
     /* Replace PERL_PATCHLEVEL with __PERL_CORE_MINOR__ */
     /* Replace: 0 */
#  endif
#endif

#define D_PPP_DEC2BCD(dec) ((((dec)/100)<<8)|((((dec)%100)/10)<<4)|((dec)%10))
#define PERL_BCDVERSION ((D_PPP_DEC2BCD(__PERL_CORE_MAJOR__)<<24)|(D_PPP_DEC2BCD(__PERL_CORE_MINOR__)<<12)|D_PPP_DEC2BCD(__PERL_CORE_RELEASE__))

#if __PERL_CORE_MAJOR__ < 5
#  error ppport.h only works with Perl version 5
#endif

#ifndef __PERL_CORE_MINOR___DECIMAL
#	define __PERL_CORE_MINOR___DECIMAL(r,v,s) (r*1000000 + v*1000 + s)
#endif

#ifndef PERL_DECIMAL_VERSION
# define PERL_DECIMAL_VERSION \
     __PERL_CORE_MINOR___DECIMAL(__PERL_CORE_MAJOR__,__PERL_CORE_MINOR__,__PERL_CORE_RELEASE__)
#endif

#ifndef __PERL_CORE_MINOR___LT
# define __PERL_CORE_MINOR___LT(r,v,s) \
     (PERL_DECIMAL_VERSION < __PERL_CORE_MINOR___DECIMAL(r,v,s))
#endif

#ifndef __PERL_CORE_MINOR___GE
# define __PERL_CORE_MINOR___GE(r,v,s) \
     (PERL_DECIMAL_VERSION >= __PERL_CORE_MINOR___DECIMAL(r,v,s))
#endif
